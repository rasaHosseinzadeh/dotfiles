#!/bin/sh

dir="${XDG_CACHE_HOME}/site-track"
tmpdir="/tmp/site-track"
mkdir -p "${dir}"
mkdir -p "${tmpdir}"
! test -e "${dir}/${2}" && touch "${dir}/${2}"
/usr/bin/wget -q ${1} --output-document="${tmpdir}/${2}"
! /usr/bin/cmp -s  "${dir}/${2}" "${tmpdir}/${2}" && /usr/bin/notify-send "${2} Changed." "Visit it."
rm "${dir}/${2}"
mv "${tmpdir}/${2}" "${dir}/${2}"
