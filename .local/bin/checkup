#!/bin/sh

# Syncs repositories and downloads updates, meant to be run as a cronjob.

ping -q -c 1 example.org > /dev/null || exit

notify-send "ğŸ“¦ Repository Sync" "Checking for package updates..."

sudo -A yay -Syyuw --noconfirm || notify-send "Error downloading updates.

Check your internet connection, if pacman is already running, or run update manually to see errors."

if yay -Qu | grep -v "\[ignored\]"
then
	notify-send "ğŸ Repository Sync" "Updates available."
else
	notify-send "ğŸ“¦ Repository Sync"  "Sync complete. No new packages for update."
fi
